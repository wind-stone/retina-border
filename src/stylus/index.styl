/**
 * @file 高清屏 1px 边框解决方案
 * @author: wind-stone<wind-stone@qq.com>
 */

@import './core.styl'

// 边框默认颜色
$defaultBorderColor = rgba(0, 0, 0, .08)

// 全边框
.retina-border-all
  retina-border(1px)

// 上边框
.retina-border-top
  retina-border(1px 0 0)

// 右边框
.retina-border-right
  retina-border(0 1px 0 0)

// 下边框
.retina-border-bottom
  retina-border(0 0 1px)

// 左边框
.retina-border-left
  retina-border(0 0 0 1px)
